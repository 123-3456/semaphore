---
- hosts: all
  remote_user: ubuntu

  become: yes
  tasks:
  - name: update apt packages
    apt:
      upgrade: yes
      update_cache: yes
  - name: Install MySQL Server 8.0
      apt:
        name: mysql-server-8.0
        state: present

    - name: "Install ansible python3 mysql dependency"
      apt:
        name: python3-mysqldb
        state: latest

    - name: Start mysql service
      service:
        name: "{{ item }}"
        state: started
      loop:
      - mysql

    - name: db
      mysql_db:
       name: magento
       state: present

    - name: user
      mysql_user:
       name: codilar
       password: magento123
       priv: '*.*:ALL'
       state: present
